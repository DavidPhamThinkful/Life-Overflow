extends layout.pug

include utils.pug

block content
  +validationErrors(errors)
  .register-page
    div.register-form
      h2#h2 Register
      form(action='/register' class='register-form-field' method='post')
        input(type='hidden' name='_csrf' value=csrfToken)
        div.register-username
          +field('Username', 'username', username)
        div.register-email
          +field('Email', 'email', email, 'email')
        div.register-password
          +field('Password', 'password', '', 'password')
        div.register-confirmPassword
          +field('Confirm password', 'confirmPassword', '', 'password')
        button(type='submit') Sign up
